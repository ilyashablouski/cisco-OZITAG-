<div class="authorization-page">
  <div class="authorization-page__main">
    <a href="" class="authorization-page__logo"></a>
    <div class="authorization-page__content {{#if restore-password}}authorization-page__content--with-title{{/if}}">
      {{#if restore-password}}
        <span class="authorization-page__title">{{title}}</span>

        <div class="authorization-page__wrapper">
          <span class="authorization-page__label">{{{label}}}</span>
        </div>
      {{/if}}


      <div class="authorization-page__wrapper">
        {{#if single-email-input}}
          <div class="authorization-page__form-group">
            <div class="authorization-page__input">
              {{> ui/input placeholder="Email"}}
            </div>
          </div>


        {{else}}
          <div class="authorization-page__form-group">
            <div class="authorization-page__input">
              {{> ui/input placeholder="Email"}}
            </div>
            <div class="authorization-page__input">
              {{> ui/input placeholder="Password"}}
            </div>
            <div class="authorization-page__form-btn">
              <a href="#" class="authorization-page__form-btn-link">Forgot Password?</a>
            </div>
          </div>
        {{/if}}

        <div class="authorization-page__buttons">
          {{#when confirmation '||' sign-in }}
            <div class="authorization-page__button authorization-page__button--single">
              {{> ui/btn size="large" label="Sign In" w100=true}}
            </div>
          {{else}}
            <div class="authorization-page__button">
              {{> ui/btn size="large" outline=true label="Cancel" w100=true}}
            </div>

            <div class="authorization-page__button">
              {{> ui/btn size="large" label=btn-right w100=true}}
            </div>
          {{/when}}
        </div>
      </div>
    </div>
  </div>
</div>

